{
    "name": "backend",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "MIT",
    "type": "module",
    "scripts": {
        "build": "bun run scripts/build.ts",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
        "start:dev": "bun run scripts/start.ts --watch",
        "start:debug": "bun run scripts/start.ts --debug",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./apps/gateway/test/jest-e2e.json",
        "generate:proto": "buf generate"
    },
    "dependencies": {
        "@grpc/grpc-js": "^1.14.1",
        "@grpc/proto-loader": "^0.8.0",
        "@nestjs/common": "^11.0.1",
        "@nestjs/core": "^11.0.1",
        "@nestjs/microservices": "^11.1.9",
        "@nestjs/platform-express": "^11.0.1",
        "@nestjs/platform-socket.io": "^11.1.9",
        "@nestjs/websockets": "^11.1.9",
        "amqp-connection-manager": "^5.0.0",
        "amqplib": "^0.10.9",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "ioredis": "^5.8.2",
        "kafkajs": "^2.2.4",
        "mqtt": "^5.14.1",
        "nats": "^2.29.3",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@bufbuild/buf": "^1.60.0",
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.18.0",
        "@nestjs/cli": "^11.0.10",
        "@nestjs/schematics": "^11.0.0",
        "@nestjs/testing": "^11.0.1",
        "@swc/cli": "^0.7.9",
        "@swc/core": "^1.15.2",
        "@types/bun": "^1.3.2",
        "@types/express": "^5.0.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^22.10.7",
        "@types/supertest": "^6.0.2",
        "eslint": "^9.18.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.2",
        "globals": "^16.0.0",
        "jest": "^30.0.0",
        "prettier": "^3.4.2",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "ts-proto": "^2.8.3",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.20.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/apps/",
            "<rootDir>/libs/"
        ],
        "moduleNameMapper": {
            "^@app/grpc-contracts(|/.*)$": "<rootDir>/libs/grpc-contracts/src/$1"
        }
    }
}